{
  "name": "example/currency-converter",
  "description": "Minimal currency converter example with DI via YAML, tests, phpstan and php-cs-fixer",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "symfony/yaml": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.19"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes",
    "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}